<div class="site-content_wrap container">
  <div class="row">
    <div id="primary" class="col-xs-12 col-lg-9 col-lg-push-3">
      <main id="main" class="site-main" role="main">
        <div id="woo-primary" class="content-area willard">
          <div id="woo-main" class="site-main" role="main">
            <div id="product-215" class="post-215 product type-product status-publish has-post-thumbnail hentry product_shipping_class-class-2 has-thumb swiper-slide">
              <%= form_for @product, url: products_path do |f|%>
                <div class="row single_product_wrapper">

                  <!-- image -->
                  <div class="col-xl-5 col-md-12 col-sm-12 col-xs-12">
                    <div class="single-image-container">
                      <%= render "image_detail" %>
                    </div>
                  </div>

                  <!-- detail -->
                  <div class="col-xl-7 col-md-12 col-sm-12 col-xs-12">
                    <div class="summary entry-summary">
                      <span class="posted_in">
                        <% ["Broaching machine", "Cleaning cloths", "Cutters", "Drill press", "Drills", "Gardenign Tools",
                          "Gear shaper", "Glass tumblers", "Grinders", "Hand Tools", "Heat Guns", "Hobbing machine",
                          "Hone", "Houseware Tools", "Lubrication Tools", "Machining Tools", "Molds", "Paper cups",
                          "Plastic cups", "Plumbing Tools", "Power Saws", "Power Tools", "Sockets", "Wrenches" ].each do |field| %>
                          <%= link_to field, "" %>,
                        <% end %>
                      </span>

                      <h1 class="product_title entry-title">
                        <%= @product.name %>
                      </h1>

                      <div class="product_meta">
                        <span class="sku_wrapper">Mã sản phẩm:      <span class="sku" itemprop="sku"><%= @product.model %></span></span>
                        <span class="tagged_as">Tags:
                          <% ["cutter", "hammer", "household", "power", "power tools", "sprayer", "tools" ].each do |field| %>
                            <%= link_to field, "" %>,
                          <% end %>
                        </span>
                      </div>

                      <p class="price">
                        <span class="woocs_price_code" data-product-id="215">
                          <span class="woocommerce-Price-amount amount"><%= @product.price %>
                            <span class="woocommerce-Price-currencySymbol">$</span>
                          </span>
                        </span>
                      </p>

                      <div class="woocommerce-product-details__short-description">
                        <p>Mô tả ngắn: <%= @product.short_description %></p>
                      </div>

                      <form class="cart" method="post" enctype="multipart/form-data" data-product_id="215" data-product_variations="[hash_array]" current-image="">
                        <div class="">
                          <div class="">
                            <%= f.button "Đặt hàng", name: "add-to-cart", class: "single_add_to_cart_button button alt" %>
                          </div>
                        </div>
                      </form>
                    </div>
                    <!-- .summary -->
                  </div>
                </div>
                <%= render "description" %>
                <%= render "related_products_sidebar" %>
              <% end %>
            </div>
            <!-- #product-215 -->
          </div>
        </div>
      </main>
      <!-- #main -->
    </div>
    <!-- #primary -->
    <%= render "layouts/left_navigator" %>
  </div>
  <!-- .row -->
</div>
