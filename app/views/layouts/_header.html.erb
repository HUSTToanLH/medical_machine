<header id="masthead" class="site-header default" role="banner">
  <!-- Mobile panel -->
  <div class="mobile-panel">
    <button class="menu-toggle mobile-toggle" aria-controls="main-menu" aria-expanded="false">
    <span class="menu-toggle-box">
    <span class="menu-toggle-inner"></span>
    </span>
    </button>
    <div class="mobile-panel__right">
      <div class="header-search">
        <span class="search-form__toggle"></span>

        <!-- Search form -->
        <%= form_tag (controller_name != "medias" ? search_product_path : medias_path), method: "get", class: "search-form woocommerce-product-search" do %>
          <div class="search-form__input-wrap">
            <label class="screen-reader-text" for="woocommerce-product-search-field">Search for:</label>
            <i class="linearicon linearicon-magnifier"></i>
            <%= search_field_tag :query, params[:query],
              id: "woocommerce-product-search-field",
              class: "search-form__field", placeholder: "Tìm kiếm sản phẩm, Tài liệu…",
              title: "Search for:" %>
          </div>
          <%= hidden_field_tag :post_type, "product" unless controller_name == "medias" %>
          <%= hidden_field_tag :media_type, params[:media_type] if controller_name == "medias" %>
          <%= hidden_field_tag :field_id, params[:field_id] if controller_name == "medias" %>
          <button type="submit" class="search-form__submit btn-secondary">Tìm kiếm</button>
        <% end %>
        <span class="search-form__close"></span>
      </div>

    </div>
  </div>
  <!-- End Mobile panel -->

  <!-- Header content -->
  <div class="header-container">
    <div class="header-container_wrap container">
      <div class="header-container__flex">
        <div class="site-branding">
          <div class="site-logo">
            <%= link_to root_path, class: "site-logo__link", rel: "home" do %>
              <img src="https://ld-wp.template-help.com/woocommerce_58679/wp-content/themes/tm-willard/assets/images/logo.png" alt="Vật tư thí nghiệm" class="site-link__img">
            <% end %>
          </div>
        </div>

        <!-- Search form -->
        <div class="header-search">
         <%= form_tag (controller_name != "medias" ? search_product_path : medias_path), method: "get", class: "search-form woocommerce-product-search" do %>
            <div class="search-form__input-wrap">
              <label class="screen-reader-text" for="woocommerce-product-search-field">Search for:</label>
              <i class="linearicon linearicon-magnifier"></i>
              <%= search_field_tag :query, params[:query],
                id: "woocommerce-product-search-field",
                class: "search-form__field", placeholder: "Tìm kiếm sản phẩm, Tài liệu…",
                title: "Search for:" %>
            </div>
            <button type="submit" class="search-form__submit btn-secondary">Tìm kiếm</button>
            <%= hidden_field_tag :post_type, "product" unless controller_name == "medias" %>
            <%= hidden_field_tag :media_type, params[:media_type] if controller_name == "medias" %>
            <%= hidden_field_tag :field_id, params[:field_id] if controller_name == "medias" %>
          <% end %>
        </div>
        <!-- End Search form -->

        <div class="site-branding">
          <div class="site-logo">
            <div class="contact-block__item contact-block__item--icon">
              <i class="contact-block__icon linearicon linearicon-telephone telephone-header"></i>
              <div class="contact-block__value-wrap">
                <span class="contact-block__label telephone-header"><%= Company.first.phone %> - <%= Company.first.contact_name %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Menu -->
    <%= render "layouts/top_menu" %>
    <!-- End Menu -->

  </div>
</header>
