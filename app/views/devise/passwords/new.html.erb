<div class="vertical-center">
  <div class="container col-md-2">
    <h2 class="form-signin-heading text-center">Quên mật khẩu?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field field-padding-bottom">
        <%= f.label :email, class: 'sr-only' %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
      </div>

      <div class="actions">
        <%= f.submit "Lấy lại mật khẩu", class: 'btn btn-lg btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
