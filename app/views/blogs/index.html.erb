<%= render "layouts/breadcrumbs" %>
<div class="site-content_wrap container">
  <div class="row">
    <div id="primary" class="col-xs-12 col-lg-10 col-lg-push-2">
      <main id="main" class="site-main" role="main">
        <header class="page-header">
          <h1 class="page-title screen-reader-text">Category: Accessories</h1>
        </header>
        <!-- .page-header -->
        <div class="posts-list posts-list--default content-excerpt one-left-sidebar featured-image--fullwidth <%= 'non-blog' unless @blogs.present?%>">
          <% unless @blogs.present? %>
            <span>Bài viết đang được cập nhật.</span>
          <% end %>
          <% @blogs.each do |blog| %>
            <article id="post-73" class="posts-list__item card post-73 post type-post status-publish format-standard has-post-thumbnail hentry category-accessories category-diy-home category-tips tag-drill tag-hammer tag-hand-tools tag-power-tools has-thumb">
              <figure class="post-thumbnail">
                <%= link_to "#{image_tag blog.blog_images.first.url, alt: blog.feature_image_alt, title: blog.feature_image_title}".html_safe, blog_path(blog), class: "post-thumbnail__link post-thumbnail--fullwidth" %>
                <span class="post-cats">
                  <% blog.blog_categories.uniq.each do |category| %>
                    <%= link_to category.name, blogs_path(blog_category_id: category.id) %>
                  <% end %>
                </span>
              </figure>
              <!-- .post-thumbnail -->
              <div class="post-list__item-content ">
                <header class="entry-header">
                  <h3 class="entry-title">
                    <%= link_to blog.title, blog_path(blog) %>
                  </h3>
                </header>
                <!-- .entry-header -->
                <div class="entry-content">
                  <p>
                    <%= blog.content[0..500] %>
                  </p>
                </div>
                <!-- .entry-content -->
                <footer class="entry-footer">
                  <div class="entry-meta">
                    <span class="post__date">
                      <%= link_to blog.created_at.strftime(Settings.format.created_at), blogs_path(time: blog.time_param[:value]) %>
                    </span>
                    <span class="post__tags">
                      <% blog.tags.uniq.each do |tag|%>
                        <%= link_to tag.name, blogs_path(tag_id: tag.id) %>
                        <% unless tag == blog.tags.last %>
                          ,
                        <% end %>
                      <% end %>
                    </span>
                    <div class="share-btns__list-wrap">
                    </div>
                  </div>
                  <!-- .entry-meta -->
                  <%= link_to blog_path(blog), class: 'btn btn-secondary' do %>
                      <span class="link__text">Xem thêm</span>
                  <% end %>
                </footer>
                <!-- .entry-footer -->
              </div>
              <!-- .post-list__item-content -->
            </article>
          <% end %>
        </div>
        <nav class="woocommerce-pagination">
          <%= paginate @blogs %>
        </nav>
      </main>
      <!-- #main -->
    </div>
    <!-- #primary -->
    <%= render "left_sidebar" %>
  </div>
  <!-- .row -->
</div>
