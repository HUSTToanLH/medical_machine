<div id="page-wrapper" class="admin-blog-detail">
  <div class="row">
    <div class="col-lg-12">
      <%= render "shared/flash" %>
      <h1 class="page-header"><%= @blog.title %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel-body">
        <div class="blog-addition-info">
          <ul class="list-inline info">
            <li><strong>Bài viết nổi bật:</strong>
              <%= check_box_tag :is_important, 1, @blog.is_important, disabled: true %>
            </li>
            <li><strong>Bài viết dịch vụ sửa chữa:</strong>
              <%= check_box_tag :is_service, 1, @blog.is_service, disabled: true %>
            </li>
          </ul>
          <div class="blog-img">
            <div class="row">
              <div class="col-md-2"><strong>Ảnh đại diện bài viết</strong></div>
              <div class="col-md-9">
              <%= image_tag @blog.feature_images.first.url_url, class: "img-responsive"  %>
              </div>
            </div>
          </div>
        </div>
        <div class="blog-content">
          <h3 class="content-label">Nội dung bài viết</h3>
          <%= @blog.content.html_safe %>
        </div>
      </div>
    </div>
  </div>
</div>
