<div class="modal fade" id="product-category" tabindex="-1" role="dialog" aria-labelledby="delete" aria-hidden="true">
  <input type="hidden" class="delete-product-id" value="Norway">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <a href="#" class="close" data-dismiss="modal" aria-label="close">&times;</a>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title custom_align" id="Heading">Chọn danh mục</h4>
      </div>
      <div class="modal-body">
        <% @g_categories.each_slice(2).to_a.each do |category_block|%>
          <div class="row show-grid">
            <% category_block.each do |category| %>
              <%= f.fields_for(:product_categories) do |ff| %>
                <%= render "category_field", f: f, ff: ff, category: category %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer ">
        <button type="button" class="btn btn-success" id="comfirm-category-product" data-dismiss="modal">OK</button>
      </div>
    </div>
  </div>
</div>
