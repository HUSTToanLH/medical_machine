<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Tạo mới sản phẩm</h1>
    </div>
  </div>
  <div class="row" id="product-new">
    <div class="col-lg-12">
      <div class="panel-body">
        <div class="form-company">
          <div class="form-group">
            <%= render "shared/flash" %>
          </div>
          <%= form_for([:admin, @product], url: admin_products_path(), html: {multipart: true}) do |f| %>
            <%= render "image_field", f: f %>
            <%= render "detail_field", f: f %>
            <%= render "category_modal", f: f %>
            <%= render "field_modal", f: f %>
            <%= render "video_modal", f: f %>
            <%= render "document_modal", f: f %>
            <div class="row show-grid">
              <div class="form-group form-group-part col-xs-2">
                <%= link_to "Chọn danh mục", "#product-category", :class => "btn btn-success", "data-toggle" => "modal" %>
              </div>
              <div class="form-group form-group-part col-xs-4">
                <p class="selected-category-product multi-line"></p>
              </div>
              <div class="form-group form-group-part col-xs-2">
                <%= link_to "Chọn lĩnh vực", "#product-field", :class => "btn btn-success", "data-toggle" => "modal" %>
              </div>
              <div class="form-group form-group-part col-xs-4">
                <p class="selected-field-product multi-line"></p>
              </div>
            </div>

            <div class="row show-grid">
              <div class="form-group form-group-part col-xs-2">
                <%= link_to "Chọn video", "#product-video", :class => "btn btn-success", "data-toggle" => "modal" %>
              </div>
              <div class="form-group form-group-part col-xs-4">
                <p class="selected-video-product multi-line"></p>
              </div>
              <div class="form-group form-group-part col-xs-2">
                <%= link_to "Chọn tài liệu", "#product-document", :class => "btn btn-success", "data-toggle" => "modal" %>
              </div>
              <div class="form-group form-group-part col-xs-4">
                <p class="selected-document-product multi-line"></p>
              </div>
            </div>

            <div class="row show-grid">
              <div class="form-group btn-align-center">
                <%= f.submit "Tạo", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
