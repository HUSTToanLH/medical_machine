    <% @top_categories.each do |category| %>
      <div class="tm_pb_column col-xl-2 col-lg-4 col-md-6 col-sm-12">
        <div class="tm_pb_icon_box_module__item__wrapper">
          <a href="https://ld-wp.template-help.com/woocommerce_58679/product-category/power-tools/" 
          title="<%= category.name %>" class="tm_pb_icon_box_module__item  tm_pb_icon_box_module__item_0">
