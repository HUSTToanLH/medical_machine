<div id="category-home" class="tm_pb_icon_box_module__wrapper  tm_pb_icon_box_module_0 tm_pb_bg_layout_light">
  <div class="row tm_pb_icon_box_module__boxes">
    <% @top_categories.each do |category| %>
      <div class="tm_pb_column col-xl-2 col-lg-4 col-md-6 col-sm-12">
        <div class="tm_pb_icon_box_module__item__wrapper">
          <%= link_to product_category_path(category), class: "tm_pb_icon_box_module__item  tm_pb_icon_box_module__item_0 tm-thumbs-wrap effect-fade",
            title: category.name do %>
            <span class="tm-pb-icon tm-waypoint tm_pb_animation_off tm_pb_icon_align_center category-block">
              <%= image_tag category.feature_image, size: 80, class: "category-img" %>
              <%= image_tag category.feature_image_2, size: 80, class: "category-img" %>
            </span>
            <span class="tm_pb_icon_box_module__item__title category-span"><%= category.name %></span>
            <span class="tm_pb_icon_box_module__item__description"></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
